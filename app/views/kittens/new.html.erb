<h1>Create new kitten</h1>

<%= form_for @kitten do |f| %>
	<%= f.label "Kitten name" %>
	<%= f.text_field :name, class: "text" %><br>
	<%= f.label "Kitten age" %>
	<%= f.number_field :age, class: "text" %><br>
	<%= f.label "Cuteness" %>
	<%= f.number_field :cuteness, class: "text" %><br>
	<%= f.label "Softness" %>
	<%= f.number_field :softness, class: "text" %><br>	
	<%= f.submit "SAVE", class: "button" %>
<% end %>