<%= form_for @kitten do |f| %>
	<%= f.label "Kitten name" %>
	<%= f.text_field :name, class: "text" %>
	<%= f.label "Kitten age" %>
	<%= f.number_field :age, class: "text" %>
	<%= f.label "Cuteness" %>
	<%= f.password_field :cuteness, class: "text" %>
	<%= f.label "Softness" %>
	<%= f.password_field :softness, class: "text" %>	
	<%= f.submit "SAVE", class: "button" %>
<% end %>